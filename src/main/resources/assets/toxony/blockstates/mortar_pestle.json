{
  "multipart": [
    {
      "apply": {
        "model": "toxony:block/mortar_pestle"
      }
    },
    {
      "apply": {
        "model": "toxony:block/mortar_pestle_empty"
      },
      "has_ingredients": 0
    },
    {
      "apply": {
        "model": "toxony:block/mortar_pestle_some"
      },
      "when": {
        "has_ingredients": 1
      }
    },
    {
      "apply": {
        "model": "toxony:block/mortar_pestle_full"
      },
      "when": {
        "has_ingredients": 2
      }
    },
    {
      "apply": {
        "model": "toxony:block/mortar_pestle_finished"
      },
      "when": {
        "has_ingredients": 3
      }
    }
  ]
}